@page
@model TP_ACHAT.Pages.Produits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produit.Id" />
           
            <div class="form-group">
                <label asp-for="Produit.Name" class="control-label"></label>
                <input asp-for="Produit.Name" class="form-control" />
                <span asp-validation-for="Produit.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Price" class="control-label"></label>
                <input asp-for="Produit.Price" class="form-control" />
                <span asp-validation-for="Produit.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Description" class="control-label"></label>
                <input asp-for="Produit.Description" class="form-control" />
                <span asp-validation-for="Produit.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.StockQuantity" class="control-label"></label>
                <input asp-for="Produit.StockQuantity" class="form-control" />
                <span asp-validation-for="Produit.StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group image-upload">
                <label for="ImageFile">telecharger une image</label>
                <input asp-for="ImageFile" name="ImageFile" id="ImageFile" type="file" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Produit.image" />
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
